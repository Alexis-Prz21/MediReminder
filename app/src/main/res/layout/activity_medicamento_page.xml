<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#425077"
    tools:context=".MedicamentoPage">


    <Button
        android:id="@+id/btnClearData"
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:text="Eliminar"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337" />

    <Button
        android:id="@+id/btnagregar"
        android:layout_width="248dp"
        android:layout_height="47dp"
        android:text="Agregar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.938" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicamentos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.938" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.938" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarunder"
        android:layout_width="410dp"
        android:layout_height="175dp"
        android:background="@drawable/fondo_difuminado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:text="@string/app_appMedicamento"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarunder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.511" />

    <ImageView
        android:id="@+id/imageicon"
        android:layout_width="135dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarunder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        app:srcCompat="@drawable/icon_logo" />

    <ImageView
        android:id="@+id/iconoMedi"
        android:layout_width="123dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.071"
        app:srcCompat="@drawable/casa_ico_silueta_4" />

    <ImageButton
        android:id="@+id/btnInicio"
        android:layout_width="61dp"
        android:layout_height="65dp"
        android:background="@drawable/icon_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.879" />

    <ImageButton
        android:id="@+id/btnMedicamento"
        android:layout_width="61dp"
        android:layout_height="65dp"
        android:background="@drawable/icono_medicamento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.879" />

    <ImageButton
        android:id="@+id/btnHistorial"
        android:layout_width="61dp"
        android:layout_height="65dp"
        android:background="@drawable/icons_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.879" />

    <TextView
        android:id="@+id/tvAgregarMed"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:hint="Nombre"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textColorHint="#7E7C7C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.250"
        app:layout_constraintStart_toEndOf="@+id/txtAgregarMed"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.348" />

    <TextView
        android:id="@+id/txtAgregarMed"
        android:layout_width="96dp"
        android:layout_height="20dp"
        android:text="Medicamento: "
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarunder"
        app:layout_constraintVertical_bias="0.348" />

    <TextView
        android:id="@+id/txtInstrucciones"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Instrucciones: "
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAgregarMed"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:hint="Instrucciones"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textColorHint="#7E7C7C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.250"
        app:layout_constraintStart_toEndOf="@+id/txtInstrucciones"
        app:layout_constraintTop_toBottomOf="@+id/tvAgregarMed"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/txtFormato"
        android:layout_width="96dp"
        android:layout_height="20dp"
        android:text="Formato: "
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInstrucciones"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/tvFormato"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:hint="Formato"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textColorHint="#7E7C7C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.250"
        app:layout_constraintStart_toEndOf="@+id/txtFormato"
        app:layout_constraintTop_toBottomOf="@+id/txtInstrucciones"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/txtHoraDosis"
        android:layout_width="96dp"
        android:layout_height="20dp"
        android:text="Alarma: "
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFormato"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/tvHoraDosis"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:hint="Hora"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textColorHint="#7E7C7C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.250"
        app:layout_constraintStart_toEndOf="@+id/txtHoraDosis"
        app:layout_constraintTop_toBottomOf="@+id/txtFormato"
        app:layout_constraintVertical_bias="0.05" />


</androidx.constraintlayout.widget.ConstraintLayout>